generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  endpoints Endpoint[]
}

// A monitored API/service
model Endpoint {
  id          String   @id @default(uuid())
  name        String
  url         String
  interval    Int      // in seconds
  thresholdMs Int      // response time threshold
  createdAt   DateTime @default(now())
  lastCheckedAt DateTime? // optional last checked timestamp
  userId String?
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs        Log[]
  alerts      Alert[]
}

// Log entry for each monitoring check
model Log {
  id         String   @id @default(uuid())
  endpointId String
  statusCode Int
  latencyMs  Int
  timestamp  DateTime @default(now())
  error      String?  // optional error message
  endpoint   Endpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)
}

// Alert generated when an endpoint is down or slow
model Alert {
  id         String   @id @default(uuid())
  endpointId String
  type       String   // "DOWN" or "SLOW"
  triggeredAt DateTime @default(now())
  resolvedAt DateTime?
  endpoint   Endpoint @relation(fields: [endpointId], references: [id], onDelete: Cascade)
}