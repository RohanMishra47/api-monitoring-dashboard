generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  endpoints Endpoint[]
  billing Billing[]
}

// A monitored API/service
model Endpoint {
  id          String   @id @default(uuid())
  name        String
  url         String
  interval    Int      // in seconds
  thresholdMs Int      // response time threshold
  createdAt   DateTime @default(now())
  lastCheckedAt DateTime? // optional last checked timestamp
  userId String?
  user User? @relation(fields: [userId], references: [id])
  logs        Log[]
  alerts      Alert[]
  billing     Billing[]
}

// Log entry for each monitoring check
model Log {
  id         String   @id @default(uuid())
  endpointId String
  statusCode Int
  latencyMs  Int
  timestamp  DateTime @default(now())
  error      String?  // optional error message
  endpoint   Endpoint @relation(fields: [endpointId], references: [id])
}

// Alert generated when an endpoint is down or slow
model Alert {
  id         String   @id @default(uuid())
  endpointId String
  type       String   // "DOWN" or "SLOW"
  triggeredAt DateTime @default(now())
  resolvedAt DateTime?
  endpoint   Endpoint @relation(fields: [endpointId], references: [id])
}

// Billing record for monitoring costs
model Billing {
  id         String   @id @default(uuid())
  endpointId String
  userId String?
  billingType String? // "Monitoring Check", "Log Storage", etc.
  quantity Int? // The number of units consumed
  unitCost Float? // Cost per unit
  cost       Float // total cost (quantity * unitCost)
  timestamp  DateTime @default(now())
  endpoint   Endpoint @relation(fields: [endpointId], references: [id])
  user User? @relation(fields: [userId], references: [id])
}
